<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:visibility="gone">

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="@dimen/spacing_small"
        android:background="@drawable/message_incoming"
        android:backgroundTint="?colorSecondary"
        android:paddingStart="@dimen/message_padding_horizontal_long"
        android:paddingTop="@dimen/message_padding_vertical"
        android:paddingEnd="@dimen/message_padding_horizontal_short"
        android:paddingBottom="@dimen/message_padding_vertical"
        android:text="@string/bot_is_typing"/>

</androidx.constraintlayout.widget.ConstraintLayout>
